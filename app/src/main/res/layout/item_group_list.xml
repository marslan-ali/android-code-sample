<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/dp_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:clickable="false"
        android:src="@drawable/icon_red_person" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tick"
        android:layout_toRightOf="@+id/dp_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Mr Smith"
            android:fontFamily="@font/bitter_italic"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="03001234567"
            android:fontFamily="@font/bitter_italic"
            android:textColor="@android:color/primary_text_light"
            android:textSize="16sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/tick"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_tick"
        android:visibility="gone" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dp_icon"
        android:layout_toRightOf="@+id/dp_icon"
        android:src="@color/contact_text" />


</RelativeLayout>