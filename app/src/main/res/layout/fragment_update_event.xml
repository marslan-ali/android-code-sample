<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/App_EditText_Event"
                android:gravity="center"
                android:hint="Event Title"
                android:fontFamily="@font/bitter_italic"
                android:inputType="textMultiLine"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>

        <Spinner
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/bitter_italic"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:drawSelectorOnTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/icon_person_invied"/>


                <EditText
                    android:id="@+id/count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:fontFamily="@font/bitter_italic"
                    android:hint="Set number of people"
                    android:inputType="number"
                    android:textColor="@color/contact_text"
                    android:textColorHint="@color/contact_text"
                    android:textCursorDrawable="@color/contact_text"
                    android:textSize="20sp" />
            </FrameLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/iconlocation" />

                <TextView
                    android:id="@+id/location"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="50dp"
                    style="@style/App_EditText_Event_icon"
                    android:fontFamily="@font/bitter_italic"
                    android:hint="Set Location"
                    android:clickable="false"
                    android:inputType="textMultiLine" />

                <Switch
                    android:id="@+id/location_switch"
                    android:layout_width="wrap_content"
                    android:checked="false"
                    android:layout_height="25dp"
                    android:layout_gravity="center|right" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/iconsetdate" />

                <EditText
                    android:id="@+id/date"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="50dp"
                    style="@style/App_EditText_Event_icon"
                    android:fontFamily="@font/bitter_italic"
                    android:hint="Set Date"
                    android:clickable="false"
                    android:inputType="text" />

                <Switch
                    android:id="@+id/date_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:checked="false"
                    android:layout_gravity="center|right" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/icontime" />

                <EditText
                    android:id="@+id/time"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="50dp"
                    style="@style/App_EditText_Event_icon"
                    android:fontFamily="@font/bitter_italic"
                    android:hint="Set Time"
                    android:clickable="false"
                    android:inputType="text" />

                <Switch
                    android:id="@+id/time_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:checked="false"
                    android:layout_gravity="center|right" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/i_pay"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/red"
                android:layoutDirection="rtl"
                android:checked="true"
                android:fontFamily="@font/bitter_italic"
                android:text="I will pay" />

            <RadioButton
                android:id="@+id/u_pay"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/red"
                android:layoutDirection="rtl"
                android:fontFamily="@font/bitter_italic"
                android:text="You will pay" />

            <RadioButton
                android:id="@+id/b_pay"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/red"
                android:checked="true"
                android:fontFamily="@font/bitter_italic"
                android:layoutDirection="rtl"
                android:text="We both will pay" />
        </RadioGroup>

        <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/bitter_italic"
            android:background="@drawable/rounded_red"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@color/red" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/help_cancel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_help"/>

            <Button
                android:id="@+id/cancelEvent"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_red"
                android:fontFamily="@font/bitter_italic"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/deleteEvent"
                app:layout_constraintStart_toEndOf="@+id/help_cancel"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/deleteEvent"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_red"
                android:fontFamily="@font/bitter_italic"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/help_delete"
                app:layout_constraintStart_toEndOf="@+id/cancelEvent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/help_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_help" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


</ScrollView>
