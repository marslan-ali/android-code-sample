<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/enlarge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:src="@drawable/enlarge"
                android:layout_alignParentRight="true"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_below="@+id/enlarge"
                android:fontFamily="@font/bitter_italic"
                android:text=""
                android:textColor="@color/contact_text"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:autoLink="web|phone"
                android:linksClickable="true"
                android:textColorLink="@color/blue" />


            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@color/contact_text" />

            <TextView
                android:id="@+id/list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bitter_italic"
                android:gravity="left"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bitter_italic"
                android:gravity="left"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp"
                android:visibility="visible"/>



            <TextView
                android:id="@+id/invited"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bitter_italic"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/event_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invited"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bitter_italic"
                android:gravity="left"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_date"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bitter_italic"
                android:gravity="left"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp"
                android:visibility="visible"/>

            <Button
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/location"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_green"
                android:text="Start Navigation"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red"
                android:visibility="visible"/>

            <Button
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/navigation"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bitter_italic"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_green"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/cancelStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bitter_italic"
                android:visibility="gone"
                android:gravity="center"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>