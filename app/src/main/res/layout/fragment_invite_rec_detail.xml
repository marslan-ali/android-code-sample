<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="30dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/dp_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/line"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/red"
            android:src="@drawable/icon_red_person" />

        <TextView
            android:id="@+id/invited_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/contact_text"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="Created By"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/contact_text"
                android:clickable="false"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:hint="Event Title"
                android:inputType="textMultiLine"
                android:textStyle="bold"
                android:autoLink="web|phone"
                android:linksClickable="true"
                android:textColorLink="@color/link" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateTimeContainerInviteReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/created_date"
                    style="@style/App_EditText_Event_Detail_icon"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/iconsetdate" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total"
                    style="@style/App_EditText_Event_Detail_icon"
                    android:clickable="false"
                    android:hint="Total"
                    android:visibility="gone"
                    android:inputType="text" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/icon_red_person" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    style="@style/App_EditText_Event_Detail_icon"
                    />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/iconsetdate" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/who_pay"
                    style="@style/App_EditText_Event_Detail_icon"
                    android:clickable="false"
                    android:hint="Who pay"
                    android:visibility="gone"
                    android:inputType="text" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/icon_red_person" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loctionContainerInviteReceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    style="@style/App_EditText_Event_Detail_icon" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/iconlocation" />

            </FrameLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contact_text" />
        </LinearLayout>



        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/contact_text"
            android:gravity="center"
            android:textSize="24dp"
            android:hint="Status"
            android:visibility="gone"
            android:inputType="text"
            android:textStyle="bold" />

        <Button
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/event_date"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_green"
            android:text="Start Navigation"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@color/red" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/accept"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:background="@drawable/rounded_green"
                android:text="Yes"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red" />

            <Button
                android:id="@+id/reject"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/rounded_red"
                android:text="No"
                android:textAllCaps="false"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red" />

        </FrameLayout>
    </LinearLayout>


</ScrollView>
