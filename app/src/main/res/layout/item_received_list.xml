<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/enlarge"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:src="@drawable/enlarge"
                android:tint="@android:color/darker_gray" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dp_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@+id/enlarge"
                android:layout_margin="10dp"
                android:clickable="false"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/red"
                android:src="@drawable/icon_red_person" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enlarge"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup"
                android:textColor="@color/red"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tag"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup"
                android:textColor="@color/contact_text"
                android:textSize="14sp"
                android:autoLink="web|phone"
                android:linksClickable="true"
                android:textColorLink="@color/link" />

            <TextView
                android:id="@+id/list_name_or_invited_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/who_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_name_or_invited_by"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup"
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/invited"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/who_pay"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup"
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invited"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text=""
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/dp_icon"
                android:fontFamily="@font/bitter_italic"
                android:text="College Friends Meetup "
                android:textColor="@color/contact_text"
                android:textSize="14sp" />

            <Button
                android:id="@+id/navigation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/location"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_green"
                android:text="Start Navigation"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@color/red" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>