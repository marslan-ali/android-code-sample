<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppTheme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyTabTextAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App_EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="calender_EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/red</item>
        <item name="android:textCursorDrawable">@color/red</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="App_EditText_Create" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@color/contact_text</item>
        <item name="android:background">@null</item>

    </style>

    <style name="App_EditText_Event" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:background">@null</item>

    </style>

    <style name="App_EditText_Event_icon" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@color/contact_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@null</item>

    </style>

    <style name="App_EditText_Search" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@color/contact_text</item>
        <item name="android:background">@null</item>
    </style>

    <style name="App_EditText_Event_Detail_icon" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@color/contact_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@null</item>

    </style>

    <style name="contactListDDStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:fontFamily">@font/bitter_italic</item>
    </style>

    <style name="App_EditText_Sent_Detail_icon" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/contact_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:enabled">false</item>
        <item name="android:clickable">false</item>
        <item name="android:textColorHint">@color/contact_text</item>
        <item name="android:textCursorDrawable">@color/contact_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@null</item>

    </style>

    <style name="genderSpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
    </style>

</resources>
